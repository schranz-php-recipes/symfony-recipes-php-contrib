{
    "manifests": {
        "zendesk/zendesk_api_client_php": {
            "manifest": {
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/"
                },
                "env": {
                    "#0": "To retrieve an API token for your Zendesk server, you can read this doc:",
                    "#1": "https://support.zendesk.com/hc/en-us/articles/226022787-Generating-a-new-API-token-",
                    "ZENDESK_API_SUBDOMAIN": "",
                    "ZENDESK_API_USERNAME": "",
                    "ZENDESK_API_TOKEN": ""
                }
            },
            "files": {
                "config/packages/zendesk_api_client.php": {
                    "contents": [
                        "<?php",
                        "",
                        "declare(strict_types=1);",
                        "",
                        "use Symfony\\Component\\DependencyInjection\\Loader\\Configurator\\ContainerConfigurator;",
                        "",
                        "return static function (ContainerConfigurator $containerConfigurator): void {",
                        "    $services = $containerConfigurator->services();",
                        "",
                        "    $services->set('Zendesk\\API\\HttpClient')",
                        "        ->args([",
                        "            '%env(ZENDESK_API_SUBDOMAIN)%',",
                        "        ])",
                        "        ->call('setAuth', [",
                        "            'basic',",
                        "            [",
                        "                'username' => '%env(ZENDESK_API_USERNAME)%',",
                        "                'token' => '%env(ZENDESK_API_TOKEN)%',",
                        "            ],",
                        "        ]);",
                        "};",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "9f76aa8bc7c861dabf6b89a4f68898fe229e9e9f"
        }
    }
}
